<div class="row mt-5">
    @foreach (Deporte deporte in ViewBag.Deportes)
    {
        <div class="col-sm-4 col-lg-3 text-center">
            <div class="d-flex justify-content-center">
                <a style="text-decoration: none" href='@Url.Action("VerDetalleDeporte", new {idDeporte = deporte.IdDeporte})'>
                    <div class=" imagenesPaises mb-5" style="width: 10vw;">
                        <img class="shadow-lg mb-4 " style="border-radius: 20%" src="@deporte.Foto" height="180" width="200">
                        <p class="text-black">@deporte.Nombre</p>
                    </div>
                </a>
            </div>
        </div>
    }
</div>